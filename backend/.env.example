# GovernmentGPT Environment Variables

# Application Settings
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-with-long-random-string

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/governmentgpt
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=900

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services (obtain from respective providers)
ANTHROPIC_API_KEY=your-anthropic-api-key
VOYAGE_API_KEY=your-voyage-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp

# Government APIs (obtain from congress.gov and govinfo.gov)
CONGRESS_API_KEY=your-congress-api-key
GOVINFO_API_KEY=your-govinfo-api-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Search Configuration
SEARCH_RESULTS_LIMIT=50
SEMANTIC_SEARCH_TOP_K=50
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Content Processing
MAX_DOCUMENT_SIZE=1000000
SUMMARY_MAX_LENGTH=1500

# Monitoring
ENABLE_METRICS=True
LOG_LEVEL=INFO